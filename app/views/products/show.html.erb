<h1><%= @product.name %></h1>
<ul>
  <li><%= @product.cost %></li>
  <li><%= @product.origin %></li>
</ul>
<p><%= link_to "Return to Products", products_path %></p>
<p><%= link_to "Delete", product_path(@product),
                         :data => {:confirm => "Are you sure that you want to delete this product?",
                                   :method => "delete"} %></p>
